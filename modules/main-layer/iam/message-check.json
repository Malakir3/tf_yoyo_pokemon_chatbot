{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title" : "Message Check",
  "type" : "object",
  "properties" : {
    "events" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "message" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required": ["text"]
          }
        },
        "required": ["message"]
      }
    }
  }
}
